                -->
          <hr class="hr-width-1 hr-5x border-main">
          <!-- End divider -->

          <p class="heading-tescription lead text-gray-2">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliquapta. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi aliquipter consequat adipisicing sedari.
          </p>
          <br>
          <a href="#" target="_blank" class="btn btn-white-bordered btn-rounded"><i class="fa fa-external-link"></i> Read More!</a>
        </div>
        <!-- End heading -->

      </div> <!-- /.col -->

      <!-- Right column -->
      <div class="col-md-6">

        <div class="row">
          
          <%= render 'layouts/services/infobox',
            box_title: 'Designing',
            box_text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit minim veniam ut enim.',
            box_icon: 'fa fa-paint-brush'
          %>
       
          <%= render 'layouts/services/infobox',
            box_title: 'Developing',
            box_text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit minim veniam ut enim.',
            box_icon: 'fa fa-code'
          %>
       
          <%= render 'layouts/services/infobox',
            box_title: 'Branding',
            box_text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit minim veniam ut enim.',
            box_icon: 'fa fa-globe'
          %>

        </div><!-- /.row -->
      </div> <!-- /.col -->

    </div><!-- /.row -->
  </div> <!-- /.container -->

</section>
